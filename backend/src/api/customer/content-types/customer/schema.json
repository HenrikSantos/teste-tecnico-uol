{
  "kind": "collectionType",
  "collectionName": "customers",
  "info": {
    "singularName": "customer",
    "pluralName": "customers",
    "displayName": "Customer",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "cpf": {
      "type": "string",
      "regex": "^\\d{3}.\\d{3}.\\d{3}-\\d{2}$",
      "required": true,
      "unique": true
    },
    "telephone": {
      "type": "string",
      "required": true,
      "unique": true,
      "regex": "^\\(\\d{2}\\)\\s\\d{5}-\\d{4}$"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Ativo",
        "Inativo",
        "Aguardando ativação",
        "Desativado"
      ],
      "default": "Aguardando ativação"
    }
  }
}
